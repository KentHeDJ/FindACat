<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLemonchiffon"
    android:gravity="center"
    tools:context=".activity.MenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find_a_cat"
        android:textSize="51dp"
        android:textColor="#F08080"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/cat"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/find_a_cat_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/find_a_cat_button_text"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/favorite_cats_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/favorite_cats_button_text"
        android:layout_marginBottom="30dp"
        />
    
    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        />

</LinearLayout>